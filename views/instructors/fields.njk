<div class="item">
  <div>Avatar</div>
  <div>
    <input 
      type="url"
      name="avatar_url" 
      placeholder="http://www"
      value="{{instructor.avatar_url}}"
    />
  </div>
</div>

<div class="item">
  <div>Instructor</div>
    <div>
    <input
      type="text"
      name="name"
      placeholder="Nome do instrutor"
      value="{{instructor.name}}"
    />
  </div>
</div>

<div class="item">
  <div>Data de nascimento</div>
  <div>
    <input 
      type="date"
      name="birth"
      placeholder="Data de nascimento"
      value="{{instructor.birth}}"
    />
  </div>
</div>    

<div class="item">
  <div>Sexo</div>
  <div class='gender-item'>
     <span>
      <input 
        type="radio"
        name="gender"
        value="F"
        {% if instructor.gender == 'F' %} checked {% endif %}
        />
          Feminino
      </span>
     <span>
      <input
        type="radio"
        name="gender"
        value="M"
        {% if instructor.gender == 'M' %} checked {% endif %}
      />
      Masculino
    </span>
  </div>
</div>

<div class="item">
  <div>Área de atuação</div>
  <div>
    <input 
      type="text" 
      name="services" 
      placeholder="Modalidades ensinadas, separe-as por vírgulas"
      value="{{instructor.services}}"
    />
  </div>
</div>

<button type="submit">Salvar</button>