{% extends "layout.njk" %}

{% block content %}
  <div class="card table-container">
    <div class="show-instructors">
      <div class="button-add">
        <a href="instructors/create">+ instructor</a>
      </div>
    {% for instructor in instructors %}
    <div class="instructor">
      <div class="instructor-data">
        <img src="{{instructor.avatar_url}}" alt="{{instructor.name}}" />
        <div class="instructor-info">
          <p>Name: <strong>{{instructor.name}}</strong></p>
          <p>Services: <strong>{{instructor.services}}</strong></p>
        </div> 
      </div>
        
      <div class="buttons">
        <a href="/instructors/{{instructor.id}}" class="btn-ver">Saiba mais</a>
      </div>
      
    </div>
    {% endfor %}
    </div>  
   
  </div>

{% endblock content %}